import tkinter as tk
from tkinter import messagebox
import random
import string
import pyperclip

# Function to generate password
def generate_password():
    length = length_var.get()
    
    if length <= 0:
        messagebox.showwarning("Invalid Length", "Please enter a valid length.")
        return

    password_characters = ''
    if use_uppercase.get():
        password_characters += string.ascii_uppercase
    if use_lowercase.get():
        password_characters += string.ascii_lowercase
    if use_numbers.get():
        password_characters += string.digits
    if use_special.get():
        password_characters += string.punctuation
    
    if not password_characters:
        messagebox.showwarning("Selection Error", "Please select at least one character set.")
        return

    password = ''.join(random.choice(password_characters) for i in range(length))
    password_entry.delete(0, tk.END)
    password_entry.insert(0, password)

# Function to copy password to clipboard
def copy_to_clipboard():
    password = password_entry.get()
    if password:
        pyperclip.copy(password)
        messagebox.showinfo("Copied", "Password copied to clipboard.")
    else:
        messagebox.showwarning("Empty Password", "Generate a password before copying.")

# Initialize the main window
root = tk.Tk()
root.title("Random Password Generator")
root.geometry("400x300")
root.config(bg="lightblue")

# Title Label
title_label = tk.Label(root, text="Password Generator", font=("Helvetica", 16, "bold"), bg="lightblue")
title_label.pack(pady=10)

# Frame for options
options_frame = tk.Frame(root, bg="lightblue")
options_frame.pack(pady=10)

# Password Length Option
length_label = tk.Label(options_frame, text="Password Length:", bg="lightblue")
length_label.grid(row=0, column=0, padx=10, pady=5)
length_var = tk.IntVar(value=12)
length_entry = tk.Entry(options_frame, textvariable=length_var, width=5)
length_entry.grid(row=0, column=1, pady=5)

# Uppercase Checkbox
use_uppercase = tk.BooleanVar()
uppercase_check = tk.Checkbutton(options_frame, text="Include Uppercase", variable=use_uppercase, bg="lightblue")
uppercase_check.grid(row=1, column=0, sticky="w", padx=10, pady=5)

# Lowercase Checkbox
use_lowercase = tk.BooleanVar()
lowercase_check = tk.Checkbutton(options_frame, text="Include Lowercase", variable=use_lowercase, bg="lightblue")
lowercase_check.grid(row=1, column=1, sticky="w", padx=10, pady=5)

# Numbers Checkbox
use_numbers = tk.BooleanVar()
numbers_check = tk.Checkbutton(options_frame, text="Include Numbers", variable=use_numbers, bg="lightblue")
numbers_check.grid(row=2, column=0, sticky="w", padx=10, pady=5)

# Special Characters Checkbox
use_special = tk.BooleanVar()
special_check = tk.Checkbutton(options_frame, text="Include Special Characters", variable=use_special, bg="lightblue")
special_check.grid(row=2, column=1, sticky="w", padx=10, pady=5)

# Generate Button
generate_button = tk.Button(root, text="Generate Password", command=generate_password, bg="green", fg="white")
generate_button.pack(pady=10)

# Password Entry
password_entry = tk.Entry(root, width=30, font=("Helvetica", 12))
password_entry.pack(pady=10)

# Copy Button
copy_button = tk.Button(root, text="Copy to Clipboard", command=copy_to_clipboard, bg="blue", fg="white")
copy_button.pack(pady=10)

# Run the application
root.mainloop()
